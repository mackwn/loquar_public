<h1>Editing Question</h1>
<p id="notice"><%= notice %></p>

<%= render 'form', question: @question %>

<%= link_to "Add Answer", new_answer_path %>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.id %></td>
        <td><%= answer.content %></td>
        <td><%= link_to 'Preview', answer %></td>
        <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
        <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if @question.image.file? %>
  <%= image_tag @question.image.url(:display) %>
<% end %>

<%= link_to 'Back', edit_lesson_path(@lesson) %>
