
<div class = "container-fluid loquar-container">

<div class = "row">
  <!-- left column -->
  <div class = "col-xs-1 col-md-3 col-lg-4">.
  </div>
  <!-- center column -->
  <div class = "col-xs-10 col-md-6 col-lg-4">
    <div class="panel panel-default panel-loquar">
      <div class="panel-heading text-center panel-loquar-heading">
        Resend confirmation
      </div>
    <div class="panel-body panel-loquar-body">
        <div class ="row">
        <div class = "col-xs-12 col-md-7 col-lg-6">
    <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>

    
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
      </div>
    
      <div class="actions">
        <%= f.submit "Resend confirmation", :class => "btn btn-default btn-sm loquar-dark-button", :role => "button" %>
      </div>
    <% end %>
</div>
        <div class = "col-xs-12 col-md-5 col-lg-6">
          <%= devise_error_messages! %>
        </div>
        </div>

      <%= render "devise/shared/links" %>
    </div>
  </div>
  </div>
  </div>
</div>