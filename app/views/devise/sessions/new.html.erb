<div class = "container-fluid loquar-container">
  <p id="notice"><%= notice %></p>
<div class = "row">
  <!-- left column -->
  <div class = "col-xs-1 col-md-3 col-lg-4">.
  </div>
  <!-- center column -->
  <div class = "col-xs-10 col-md-6 col-lg-4">
    <div class="panel panel-default panel-loquar">
      <div class="panel-heading panel-loquar-heading text-center">

        Log in
      
      </div>
      <div class="panel-body panel-loquar-body">
        <div class ="row">
        <div class = "col-xs-12 col-md-7 col-lg-6">

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, :class => "form-control" %>
            </div>
          
            <div class="field">
              <%= f.label :password %><br />
              <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
            </div>
          
            <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
            <br>
            <div class="actions">
              <%= f.submit "Log in", :class => "btn btn-default btn-md loquar-dark-button", :role => "button" %>
            </div>
          
          <br>
        </div>
        <div class = "col-xs-12 col-md-5 col-lg-6">
          <%= devise_error_messages! %>
          <% if flash[:alert] %>
            <br>
            <span class='flash_error'> <%= flash[:alert] %></span>
          <% end %>
        </div>
        <% end %>
      </div>
          <%= render "devise/shared/links" %>
      
      </div>
  </div>
  </div>
  <div class = "col-xs-1 col-md-3 col-lg-4">
   
  </div>
</div>
</div>