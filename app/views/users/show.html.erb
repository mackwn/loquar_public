<div class = "container loquar-container">
<div class = "row">
    <div class = "col-xs-12 col-md-8 col-md-offset-2">
        <div class = "panel panel-default panel-loquar">
            <div class = "panel-heading panel-loquar-heading text-center">
                
                Account
            </div>
            <div class = "panel-body panel-loquar-body">
                <div class = "row">
                <div class = "col-xs-12 col-xs-offset-1 col-md-9 col-md-offset-1">

                <table id ="user-profile-table">
                    <thead>
                        <th colspan = "2">
                            <%= current_user.email %>
                        </th>
                    </thead>
                    <tr>
                        <td>Joined:</td>
                        <td><%= current_user.created_at.strftime('%D') %></td>
                    </tr>
                    <tr>
                        <td>Level:</td>
                        <td><%= current_user.level %></td>
                    </tr>
                    <tr>
                        <td>
                            Points:
                        </td>
                        <td>
                            <%= current_user.points.round(1) %>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <%= link_to "Edit Account Information", edit_user_registration_path %>
                        </td>
                    </tr>
                    
                </table>
                <ul>
                    <% if current_user.is? :admin %>
                        <li><%= link_to "Create Lesson", new_lesson_path %></li>
                        <li><%= link_to "Show Lessons", lessons_path %></li>
                        <li><%= link_to "All Users", profile_index_path %></li>
                    <% end %>
                    
                    

                </ul>
                </div>
                </div>
            </div>
            
        </div>
    </div>
</div>


</div>


